<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="tests/TestHelper.php"
         backupGlobals="false"
         backupStaticAttributes="false"
         verbose="true"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="true">
    <testsuites>
        <testsuite name="unit">
          <directory suffix="Test.php">./tests/ConcreteEntries</directory>
          <directory suffix="Test.php">./tests/TaskConfigLoader</directory>
          <directory suffix="Test.php">./tests/TaskConfigurationEntitiesMapper</directory>
        </testsuite>
        <testsuite name="functional">
          <directory suffix="Test.php">./tests/FunctionalTests</directory>
        </testsuite>
    </testsuites>
