{
    "AWSEBDockerrunVersion": 2,
    "volumes": [
        {
            "name": "nginx-proxy-conf",
            "host": {
                "sourcePath": "/var/app/current/infrastructure/nginx/nginx_site.conf"
            }
        }
    ],
    "containerDefinitions": [
        {
            "name": "apacs",
            "image": "282251075226.dkr.ecr.eu-west-1.amazonaws.com/apacs:latest",
            "essential": true,
            "memory": 128
        },
        {
            "name": "nginx-proxy",
            "image": "nginx:alpine",
            "essential": true,
            "memory": 128,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": [
                "apacs"
            ],
            "mountPoints": [
                {
                    "sourceVolume": "nginx-proxy-conf",
                    "containerPath": "/etc/nginx/conf.d/default.conf",
                    "readOnly": false
                }
            ]
        }
    ]
}