{
    "AWSEBDockerrunVersion": 2,
    "volumes": [
        {
            "name": "solr-data",
            "host": {
                "sourcePath": "/var/app/solr-data"
            }
        },
        {
            "name": "banana_core",
            "host": {
                "sourcePath": "/solr-data/banana-int"
            }
        },
        {
            "name": "mycores",
            "host": {
                "sourcePath": "/solr-data/mycores"
            }
        }
    ],
    "containerDefinitions": [
        {
            "name": "solr",
            "image": "282251075226.dkr.ecr.eu-west-1.amazonaws.com/apacs-solr:{image-tag}",
            "essential": true,
            "memory": 1500,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 8983
                }
            ],
            "environment": [
                {
                  "name": "SOLR_HOME",
                  "value": "/data/solr"
                },
                {
                  "name": "INIT_SOLR_HOME",
                  "value": "yes"
                }
            ],
            "mountPoints": [
                  {
                    "sourceVolume": "solr-data",
                    "containerPath": "/data/solr"
                  }
            ]
        },
        {
            "name": "indexer",
            "image": "282251075226.dkr.ecr.eu-west-1.amazonaws.com/apacs-indexer:{image-tag}",
            "essential": false,
            "memory": 500,
            "links": [
                "solr"
            ]
        }
    ]
}