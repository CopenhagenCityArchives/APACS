{
    "AWSEBDockerrunVersion": 2,
    "volumes": [
        {
            "name": "nginx-proxy-conf",
            "host": {
                "sourcePath": "/var/app/current/infrastructure/nginx/nginx_site.conf"
            }
        },
        {
            "name": "apacs-code",
            "host": {
                "sourcePath": "/var/app/current/apacs"
            }
        },
        {
            "name": "apacs-env",
            "host": {
                "sourcePath": "/var/app/current/.env"
            }
        }
    ],
    "containerDefinitions": [
        {
            "name": "phalcon",
            "image": "282251075226.dkr.ecr.eu-west-1.amazonaws.com/apacs:latest",
            "essential": true,
            "memory": 128,
            "dependsOn": [
                {
                    "containerName": "composer-installer",
                    "conditions": "SUCCESS"
                }
            ],
            "mountPoints": [
                {
                    "sourceVolume": "apacs-code",
                    "containerPath": "/code",
                    "readOnly": false
                },
                {
                    "sourceVolume": "apacs-env",
                    "containerPath": "/code/app/config/.env",
                    "readOnly": false
                }
            ]
        },
        {
            "name": "nginx-proxy",
            "image": "nginx:alpine",
            "essential": true,
            "memory": 128,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": [
                "phalcon"
            ],
            "mountPoints": [
                {
                    "sourceVolume": "nginx-proxy-conf",
                    "containerPath": "/etc/nginx/conf.d/default.conf",
                    "readOnly": false
                },
                {
                    "sourceVolume": "apacs-code",
                    "containerPath": "/code",
                    "readOnly": false
                }
            ]
        },
        {
            "name": "composer-installer",
            "image": "composer",
            "essential": false,
            "workingDirectory": "/code",
            "command": "install",
            "memory": 128
        }
    ]
}