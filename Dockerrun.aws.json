{
    "AWSEBDockerrunVersion": 2,
    "volumes": [
        {
            "name": "banana_core",
            "host": {
                "sourcePath": "/tmp/solr-data/banana-int"
            }
        },
        {
            "name": "mycores",
            "host": {
                "sourcePath": "/tmp/solr-data/mycores"
            }
        }
    ],
    "containerDefinitions": [
        {
            "name": "solr",
            "image": "282251075226.dkr.ecr.eu-west-1.amazonaws.com/apacs-solr:{image-tag}",
            "essential": true,
            "memory": 1500,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 8983
                }
            ],
            "mountPoints": [
                {
                    "sourceVolume": "banana_core",
                    "containerPath": "/opt/solr/server/solr/banana-int",
                    "readOnly": false
                },
                {
                    "sourceVolume": "mycores",
                    "containerPath": "/opt/solr/server/solr/mycores",
                    "readOnly": false
                }
            ]
        },
        {
            "name": "indexer",
            "image": "282251075226.dkr.ecr.eu-west-1.amazonaws.com/apacs-indexer:{image-tag}",
            "essential": false,
            "memory": 500,
            "links": [
                "solr"
            ]
        }
    ]
}